{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": [
      "node",
      "@vercel/node"
    ]
  },
  "include": [
    "api/**/*.ts",
    "scanService.ts"
  ],
  "exclude": [
    "node_modules",
    "index.ts"
  ]
}

